<Window x:Class="Ex008.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ex008"
        mc:Ignorable="d"
        Title="Gerador de números" Height="317" Width="249" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Início" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Label Content="Fim" HorizontalAlignment="Left" Margin="10,58,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Label x:Name="lblSorteio" Content="Label" HorizontalAlignment="Left" Margin="14,233,0,0" VerticalAlignment="Top" FontSize="24" Visibility="Hidden"/>
        <Button x:Name="btnSortear" Content="SORTEAR" HorizontalAlignment="Left" Margin="14,127,0,0" VerticalAlignment="Top" FontSize="24" Height="68" Width="208" Click="Button_Click"/>
        <TextBox x:Name="txtIni" HorizontalAlignment="Left" Margin="102,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged_1" FontSize="24"/>
        <TextBox x:Name="txtFim" HorizontalAlignment="Left" Margin="102,62,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged" FontSize="24"/>

    </Grid>
</Window>
